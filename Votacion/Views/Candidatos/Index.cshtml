@model IEnumerable<SistemaElecciones.Models.Candidato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoVoto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partido.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CandidatoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CandidatoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CandidatoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
